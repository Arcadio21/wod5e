<div class="tab edges" data-group="primary" data-tab="edges">
    <div class="flexrow">
        <div class="edges-list">
            <!-- Item control for adding new edge lists -->
            <h2 class="item-controls flex-center">
                <a class="item-control add-edge" title="{{localize 'WOD5E.HTR.AddEdge'}}">
                    <i class="fas fa-plus"></i>
                    {{localize "WOD5E.HTR.AddEdge"}}
                </a>
            </h2>
            <!-- Iterate through each of the edge lists -->
            {{#each actor.system.edges as |edge key|}}
                {{#if edge.visible}}
                    <div class="flexcol">
                        <div class="flexrow item-header">
                            <div class="item-name">
                                {{localize edge.name}}
                            </div>
                            <!-- Item controls for Edge sections -->
                            <div class="item-controls">
                                <!-- Icon to show the edge description to the chat-->
                                <a class="item-control edge-chat" title="{{localize 'WOD5E.ItemsList.ShowToChat'}}" data-edge="{{key}}">
                                    <i class="fas fa-comment-alt"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="edge-description">
                        <prose-mirror name="system.edges.{{key}}.description" data-document-u-u-i-d="{{../actor.uuid}}" value="{{edge.description}}"
                            toggled="true">
                            {{{edge.enrichedDescription}}}
                        </prose-mirror>
                    </div>
                {{/if}}
            {{/each}}
        </div>
        <div class="perks-list">
            <h2 class="flex-center">Perks</h2>
            {{#each actor.system.edges as |edge key|}}
                {{#if edge.visible}}
                    <div class="flexrow item-header">
                        <div class="item-name">
                            {{localize edge.name}}
                        </div>
                        <!-- Item controls for Edge sections -->
                        <div class="item-controls">
                            <!-- Add new edge perk -->
                            <a class="item-control item-create" title="{{localize 'WOD5E.HTR.AddPerk'}}" data-type="perk" data-subtype="{{key}}">
                                <i class="fas fa-plus"></i>
                            </a>
                        </div>
                    </div>
                    {{#each edge.perks as |perk key|}}
                        <div class="flexrow perk item" data-item-id="{{perk._id}}">
                            <div class="item-image">
                                <img src="{{perk.img}}">
                            </div>
                            <div class="item-name">{{perk.name}}</div>
                            <div class="item-controls">
                                <!-- Icon to edit the perk-->
                                <a class="item-control item-edit" title="{{localize 'WOD5E.Edit'}}">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <!-- Icon to display the perk in chat -->
                                <a class="item-control item-chat" title="{{localize 'WOD5E.ItemsList.ShowToChat'}}">
                                    <i class="fas fa-comment-alt"></i>
                                </a>
                                <!-- Icon to delete the perk -->
                                <a class="item-control item-delete" title="{{localize 'WOD5E.Delete'}}">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>
                    {{/each}}
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>
