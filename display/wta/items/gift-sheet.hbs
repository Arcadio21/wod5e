<header class="item-header">
    <img class="profile-img" src="{{img}}" data-edit="img" title="{{name}}" alt="Item Image" />
    <div class="header-fields">
        <h1 class="charname"><input name="name" type="text" value="{{name}}" placeholder="{{localize 'WOD5E.Name'}}" /></h1>
        <div class="flexrow">
            <!-- Input the level of the gift -->
            <div class="flexcol level flex-center item-resource">
                <div>
                    <b>
                        {{localize "WOD5E.Level"}}
                    </b>
                </div>
                <input name="system.level" value="{{level}}" type="number" min="0" max="5"/>
            </div>
            <div class="flexcol flex-center item-resource">
                <div>
                    <b>{{localize 'WOD5E.WTA.RageCost'}}</b>
                </div>
                <input name="system.cost" type="number" value="{{cost}}" placeholder="0"/>
            </div>
            <div class="flexcol flex-center item-resource">
                <div>
                    <b>{{localize 'WOD5E.WTA.WillpowerCost'}}</b>
                </div>
                <input name="system.willpowercost" type="number" value="{{willpowercost}}" placeholder="0"/>
            </div>
            <!-- Select the discipline this power belongs to -->
            <div class="flexcol discipline flex-center item-resource">
                <label>
                    <b>{{localize "WOD5E.WTA.GiftType"}}</b>
                </label>
                <select name="system.giftType" data-type="String">
                    {{selectOptions giftOptions selected=selectedGift localize=true}}
                </select>
            </div>
        </div>
    </div>
</header>
