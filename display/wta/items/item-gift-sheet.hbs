<form class="{{cssClass}}" autocomplete="off">
    <header class="item-header">
        <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" alt="Item Image" />
        <div class="header-fields flexcol">
            <h1 class="charname"><input name="name" type="text" value="{{item.name}}"
                    placeholder="{{localize 'WOD5E.Name'}}" /></h1>
            <div class="flexrow grid grid-2row">
                <div class="flexrow">
                    <!-- Input the level of the gift -->
                    <div class="flexcol level flex-center">
                        <div>
                            <b>
                                {{localize "WOD5E.Level"}}
                            </b>
                        </div>
                        <input name="system.level" value="{{item.system.level}}" type="number" min="0" max="5"/>
                    </div>
                    <div class="flexcol level flex-center">
                        <div>
                            <b>
                                {{localize "WOD5E.ItemsList.Cost"}}
                            </b>
                        </div>
                        <input name="system.cost" value="{{item.system.cost}}" type="number" min="0" max="5"/>
                    </div>
                    <div class="flexcol level flex-center">
                        <div>
                            <b>
                                {{localize "WOD5E.WTA.WillpowerCost"}}
                            </b>
                        </div>
                        <input name="system.willpowercost" value="{{item.system.willpowercost}}" type="number" min="0"/>
                    </div>
                </div>
                <div class="flexcol">
                    <div class="flexrow">
                        <div>
                            <b>
                                {{localize "WOD5E.WTA.Renown"}}
                            </b>
                        </div>
                        <select name="system.renown" value="{{item.system.renown}}" data-type="String">
                            {{#select item.system.renown}}
                            {{> "systems/vtm5e/display/shared/items/parts/renown.hbs"}}
                            {{/select}}
                        </select>
                    </div>
                    <!-- Select the gift this power belongs to -->
                    <div class="flexrow">
                        <div>
                            <b>
                                {{localize "WOD5E.WTA.GiftType"}}
                            </b>
                        </div>
                        <select name="system.giftType" data-type="String">
                            {{#select item.system.giftType}}
                            {{> "systems/vtm5e/display/shared/items/parts/gifts.hbs"}}
                            {{/select}}
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </header>

    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="description">{{localize "WOD5E.Tabs.Description"}}</a>
        <a class="item" data-tab="dicepool">{{localize "WOD5E.Tabs.Dicepool"}}</a>
        <a class="item" data-tab="macro">{{localize "WOD5E.ItemsList.Macro"}}</a>
        <a class="item" data-tab="bonuses">{{localize "WOD5E.ItemsList.Bonuses"}}</a>
    </nav>

    {{!-- Sheet Body --}}
    <section class="sheet-body">
        {{!-- Description Tab --}}
        {{> "systems/vtm5e/display/shared/items/parts/description.hbs"}}

        {{!-- Dicepool Tab --}}
        {{> "systems/vtm5e/display/shared/items/parts/dicepool.hbs"}}

        {{!-- Macro Tab --}}
        {{> "systems/vtm5e/display/shared/items/parts/macro.hbs"}}

        {{!-- Bonuses Tab --}}
        {{> "systems/vtm5e/display/shared/items/parts/bonuses.hbs"}}
    </section>
</form>
