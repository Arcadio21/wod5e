{{!-- Werewolf Sheet Header --}}
<header class="actor-header" {{#if headerbg}} style="background: url({{headerbg}}) center;"{{/if}}>
    <div class="header-fields">
        <div class="header-fields-left">
            {{!-- Health Tracker --}}
            {{> "systems/vtm5e/display/shared/actors/parts/health.hbs"}}
            {{!-- Willpower Tracker --}}
            {{> "systems/vtm5e/display/shared/actors/parts/willpower.hbs"}}
        </div>
    </div>
    <!-- Middle of the header -->
    {{> "systems/vtm5e/display/shared/actors/parts/header-profile.hbs"}}
    <div class="header-fields">
        <div class="header-fields-right">
            <div class="flexcol">
                <div class="field-section">
                    <div class="flexrow nowrap">
                        <div class="flexcol">
                            <label class="resource-label field-header">{{localize 'WOD5E.WTA.Auspice'}}</label>
                            <input name="system.headers.auspice" type="text" value="{{auspice}}" placeholder="{{localize 'WOD5E.WTA.Auspice'}}"/>
                        </div>
                        <div class="flexcol">
                            <label class="resource-label field-header">{{localize 'WOD5E.WTA.Tribe'}}</label>
                            <input name="system.headers.tribe" type="text" value="{{tribe}}" placeholder="{{localize 'WOD5E.WTA.Tribe'}}"/>
                        </div>
                    </div>
                </div>
                <div class="flexcol field-section">
                    <label class="resource-label field-header">{{localize "WOD5E.WTA.Rage"}}</label>
                    <div class="flexrow">
                        {{> "systems/vtm5e/display/wta/actors/parts/rage-value.hbs"}}
                        {{> "systems/vtm5e/display/wta/actors/parts/rage-button.hbs"}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
