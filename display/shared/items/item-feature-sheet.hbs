<form class="{{cssClass}}" autocomplete="off">
    <header class="item-header">
        <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" alt="Item Image" />
        <div class="header-fields">
            <h1 class="charname"><input name="name" type="text" value="{{item.name}}"
                    placeholder="{{localize 'WOD5E.Name'}}" /></h1>
        </div>
    </header>

    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="description">{{localize "WOD5E.Tabs.Description"}}</a>
        <a class="item" data-tab="attributes">{{localize "WOD5E.AttributesList.Attributes"}}</a>
        <a class="item" data-tab="macro">{{localize "WOD5E.ItemsList.Macro"}}</a>
        <a class="item" data-tab="bonuses">{{localize "WOD5E.ItemsList.Bonuses"}}</a>
    </nav>

    {{!-- Sheet Body --}}
    <section class="sheet-body">
        {{!-- Description Tab --}}
        <div class="tab" data-group="primary" data-tab="description">
            <prose-mirror name="system.description" data-document-u-u-i-d="{{../actor.uuid}}" value="{{item.system.description}}" toggled="true">
                {{{enrichedDescription}}}
            </prose-mirror>
        </div>

        {{!-- Attributes Tab --}}
        <div class="tab attributes" data-group="primary" data-tab="attributes">
            <div class="grid grid-4col flex-center">
                <label class="resource-label">
                    <b>
                        {{localize "WOD5E.ItemsList.FeatureType"}}:
                    </b>
                </label>
                <select name="system.featuretype" data-type="String">
                    {{selectOptions featureTypes selected=item.system.featuretype localize=true}}
                </select>
                <label class="resource-label">
                    <b>
                        {{localize "WOD5E.ItemsList.Points"}}:
                    </b>
                </label>
                <input type="number" name="system.points" value="{{item.system.points}}" />
            </div>
        </div>

        {{!-- Macro Tab --}}
        {{> "systems/vtm5e/display/shared/items/parts/macro.hbs"}}

        {{!-- Bonuses Tab --}}
        {{> "systems/vtm5e/display/shared/items/parts/bonuses.hbs"}}
    </section>
</form>
