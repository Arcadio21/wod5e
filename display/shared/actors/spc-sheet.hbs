{{!-- SPC Sheet Header --}}
<header class="actor-header" {{#if headerbg}} style="background: url({{headerbg}}) center;"{{/if}}>
    <div class="header-fields">
        <div class="header-fields-left">
            {{!-- Health Tracker --}}
            {{> "systems/vtm5e/display/shared/actors/parts/health.hbs"}}

            {{!-- Willpower Tracker --}}
            {{> "systems/vtm5e/display/shared/actors/parts/willpower.hbs"}}
        </div>
    </div>
    <!-- Middle of the header -->
    {{> "systems/vtm5e/display/shared/actors/parts/header-profile.hbs"}}
    <div class="header-fields">
        <div class="header-fields-right">
            <div class="flexcol">
                {{#ifeq currentActorType 'vampire'}}
                    <div class="field-section">
                        <div class="flexcol">
                            <label class="resource-label field-header">{{localize 'WOD5E.VTM.Humanity'}}</label>
                            <div class="resource flex-group-center">
                                {{> "systems/vtm5e/display/vtm/actors/parts/humanity.hbs"}}
                            </div>
                        </div>
                    </div>
                    <div class="field-section">
                        <div class="flexcol">
                            <label class="resource-label field-header">{{localize 'WOD5E.VTM.Hunger'}}</label>
                            {{> "systems/vtm5e/display/vtm/actors/parts/hunger.hbs"}}
                        </div>
                    </div>
                {{/ifeq}}

                {{#ifeq currentActorType 'hunter'}}
                    <div class="field-section">
                        <div class="flexcol">
                            <label class="resource-label field-header">{{localize 'WOD5E.HTR.Despair'}}</label>
                            {{> "systems/vtm5e/display/htr/actors/parts/despair.hbs"}}
                        </div>
                    </div>
                {{/ifeq}}

                {{#ifeq currentActorType 'werewolf'}}
                    <div class="field-section">
                        <div class="flexcol">
                            <label class="resource-label field-header">{{localize 'WOD5E.WTA.Rage'}}</label>
                            {{> "systems/vtm5e/display/wta/actors/parts/rage-value.hbs"}}
                        </div>
                    </div>
                    <div class="field-section flexrow">
                        {{> "systems/vtm5e/display/wta/actors/parts/balance.hbs"}}
                    </div>
                {{/ifeq}}

                {{#ifeq currentActorType 'spirit'}}
                    <div class="field-section">
                        <div class="flexcol">
                            <!-- Power Dicepool -->
                            <div class="resource-content flexcol flex-center flex-between">
                                <label class="field-header flexrow resource-label rollable" for="{{localize 'WOD5E.WTA.Power'}}" data-action="roll" data-use-absolute-value="true"
                                    data-absolute-value="{{power.value}}" data-label="{{localize 'WOD5E.WTA.Power'}}"
                                    {{#if noAdvancedDice}} data-disable-advanced-dice="true"{{/if}}>
                                    {{localize 'WOD5E.WTA.Power'}}
                                    <i class="fa-solid fa-dice-d10"></i>
                                </label>
                                <input style="max-width: 45px;" type="number" name="system.power.value" value="{{power.value}}" data-dtype="Number" />
                            </div>
                        </div>
                    </div>
                {{/ifeq}}
            </div>
        </div>
    </div>
</header>
