<form class="{{cssClass}} flexcol limited" autocomplete="off">
    {{!-- Sheet Header --}}
    <header class="limited-actor-header">
        <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" width="100" alt="Profile Image"/>
        <div class="header-content">
            <h1 class="limited-charname">
                {{actor.name}}
            </h1>
        </div>
    </header>

    {{!-- Sheet Body --}}
    <section class="sheet-body">
        <div class="tab description-content">
            <div class="flex-center">
                <label class="resource-label">
                    <h2>{{localize "WOD5E.Tabs.PublicNotes"}}</h2>
                </label>
            </div>
            <div class="limited-description-body">
                {{{enrichedNotes}}}
            </div>
        </div>
        <div class="grid grid-2col flexrow">
            {{#if actor.system.settings.limited.biography}}
                <div class="tab description-content">
                    <div class="flex-center">
                        <label class="resource-label"><h2>{{localize "WOD5E.BiographyList.Label"}}</h2></label>
                    </div>
                    <div class="limited-description-body">
                        {{{enrichedBiography}}}
                    </div>
                </div>
            {{/if}}
            {{#if actor.system.settings.limited.appearance}}
                <div class="tab description-content">
                    <div class="flex-center">
                        <label class="resource-label"><h2>{{localize "WOD5E.BiographyList.Appearance"}}</h2></label>
                    </div>
                    <div class="limited-description-body">
                        {{{enrichedAppearance}}}
                    </div>
                </div>
            {{/if}}
            {{#if actor.system.settings.limited.touchstones}}
                <div class="tab description-content">
                    <div class="flex-center">
                        <label class="resource-label"><h2>{{localize "WOD5E.BiographyList.TouchstonesAndConvictions"}}</h2></label>
                    </div>
                    <div class="limited-description-body">
                        {{{enrichedTouchstones}}}
                    </div>
                </div>
            {{/if}}
            {{#if actor.system.settings.limited.tenets}}
                <div class="tab description-content">
                    <div class="flex-center">
                        <label class="resource-label"><h2>{{localize "WOD5E.BiographyList.ChronicleTenets"}}</h2></label>
                    </div>
                    <div class="limited-description-body">
                        {{{enrichedTenets}}}
                    </div>
                </div>
            {{/if}}
        </div>
    </section>
</form>
