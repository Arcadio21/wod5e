                <div class="description-content resource">
                    <prose-mirror name="system.headers.tenets" data-document-u-u-i-d="{{../actor.uuid}}" value="{{actor.system.headers.tenets}}" toggled="true">
                        {{{enrichedTenets}}}
                    </prose-mirror>
                </div>
            </div>
        </div>
    </div>
</div>
