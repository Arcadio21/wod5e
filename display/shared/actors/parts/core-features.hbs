{{#each actor.system.features as |feature key|}}
    <div class="category">
        <div class="feature">
            <div class="flexrow item-header">
                <div class="item-name">
                    {{localize (generateLocalizedLabel key 'features')}}
                </div>
                <!-- Item controls for gift item sections -->
                <div class="item-controls">
                    <!-- Add new feature item -->
                    <a class="item-control item-create" title="{{localize 'WOD5E.Add'}}" data-type="feature" data-subtype="{{key}}">
                        <i class="fas fa-plus"></i>
                    </a>
                </div>
            </div>
        </div>
        {{#each feature as |item key|}}
            <div class="collapsible-container">
                <div class="flexrow item" data-item-id="{{item._id}}">
                    <div class="item-image">
                        <img src="{{item.img}}">
                    </div>
                    <div class="item-name{{#if item.system.enrichedDescription}} collapsible{{/if}}">{{item.name}}</div>
                    <div class="dot-tracker">
                        <div class="resource-value" data-value="{{item.system.points}}" data-name="items.{{item._id}}">
                            <span class="resource-value-empty"></span>
                            {{#numLoop 5}}
                            <span class="resource-value-step" data-index="{{this}}"></span>
                            {{/numLoop}}
                        </div>
                    </div>
                    <div class="item-controls">
                        <!-- Icon to edit the item -->
                        <a class="item-control item-edit" title="{{localize 'WOD5E.Edit'}}">
                            <i class="fas fa-edit"></i>
                        </a>
                        <!-- Icon to display the item in chat -->
                        <a class="item-control item-chat" title="{{localize 'WOD5E.ItemsList.ShowToChat'}}">
                            <i class="fas fa-comment-alt"></i>
                        </a>
                        <!-- Icon to delete the item -->
                        <a class="item-control item-delete" title="{{localize 'WOD5E.Delete'}}">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </div>
                <div class="collapsible-content item-description">
                    {{{item.system.enrichedDescription}}}
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}
