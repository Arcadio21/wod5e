<form class="{{cssClass}} flexcol {{#if locked}}locked{{/if}}" autocomplete="off">
    {{!-- Ghoul Sheet Header --}}
    <header class="actor-header">
        <div class="header-fields">
            <div class="header-fields-left">
                {{!-- Health Tracker --}}
                {{> "systems/vtm5e/display/shared/actors/parts/health.hbs"}}
                {{!-- Willpower Tracker --}}
                {{> "systems/vtm5e/display/shared/actors/parts/willpower.hbs"}}
            </div>
        </div>
        <div class="header-profile">
            <div class="header-profile-img">
                <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" alt="{{localize 'WOD5E.ActorImage'}}"/>
            </div>
            <div class="flexrow">
                <h1 class="charname">
                    <input name="name" type="text" value="{{actor.name}}" placeholder="{{localize 'WOD5E.Name'}}" />
                </h1>
                {{> "systems/vtm5e/display/shared/actors/parts/lock-button.hbs"}}
            </div>
        </div>
        <div class="header-fields">
            <div class="header-fields-right">
                <div class="flexcol field-section">
                    <label class="resource-label field-header">{{localize "WOD5E.VTM.Humanity"}}</label>
                    {{> "systems/vtm5e/display/vtm/actors/parts/humanity.hbs"}}
                </div>
                <div class="flexcol field-section">
                    <label class="resource-label field-header">{{localize 'WOD5E.VTM.Domitor'}}</label>
                    <input name="system.headers.domitor" type="text" value="{{actor.system.headers.domitor}}" placeholder="{{localize 'WOD5E.VTM.Domitor'}}" />
                </div>
            </div>
        </div>
    </header>

    {{!-- Tab Navigation --}}
    {{> "systems/vtm5e/display/shared/actors/parts/navbar.hbs"}}

    {{!-- Sheet Body --}}
    <section class="sheet-body">
        {{!-- Stats Tab --}}
        {{> "systems/vtm5e/display/shared/actors/parts/stats.hbs"}}

        {{!-- Owned Powers Tab --}}
        {{> "systems/vtm5e/display/vtm/actors/parts/disciplines.hbs"}}

        {{!-- Owned Features Tab --}}
        {{> "systems/vtm5e/display/shared/actors/parts/features.hbs"}}

        {{!-- Biography Tab --}}
        {{> "systems/vtm5e/display/shared/actors/parts/biography.hbs"}}

        {{!-- Other Tab --}}
        {{> "systems/vtm5e/display/shared/actors/parts/other.hbs"}}
    </section>

    {{!-- Actor Type Banner --}}
    {{#if displayBanner}}
    <div class="sheet-banner">
      {{localize "WOD5E.VTM.Label"}}
    </div>
    {{/if}}
</form>
